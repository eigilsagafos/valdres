{
    "name": "valdres",
    "type": "module",
    "scripts": {
        "build": "bun run lerna run build",
        "build:types": "bun run lerna run build:types",
        "publish": "bun run lerna publish  --force-publish",
        "test": "bun run lerna run test",
        "dev": "bun run lerna run build --parallel -- --watch"
    },
    "workspaces": [
        "packages/*",
        "packages/@valdres/*",
        "packages/@valdres-react/*"
    ],
    "devDependencies": {
        "@types/bun": "1.2.2",
        "lerna": "8.1.9",
        "eslint": "9.20.1",
        "eslint-config-prettier": "10.0.1",
        "prettier": "3.5.1"
    }
}
